<Window x:Class="KeySound2.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="KeySound2 启动中..." 
        Height="400" 
        Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True">
    
    <Window.Effect>
        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
    </Window.Effect>
    
    <Grid>
        <!-- 背景渐变 -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6A11CB" Offset="0"/>
                    <GradientStop Color="#2575FC" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <!-- 动画内容 -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Logo动画 -->
            <materialDesign:PackIcon x:Name="LogoIcon" 
                                     Grid.Row="1"
                                     Kind="Keyboard" 
                                     Width="120" 
                                     Height="120" 
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     RenderTransformOrigin="0.5,0.5">
                <materialDesign:PackIcon.RenderTransform>
                    <ScaleTransform x:Name="LogoScaleTransform" ScaleX="1" ScaleY="1"/>
                </materialDesign:PackIcon.RenderTransform>
            </materialDesign:PackIcon>
            
            <!-- 标题 -->
            <TextBlock Grid.Row="2"
                       Text="KeySound2" 
                       FontSize="36" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- 副标题 -->
            <TextBlock Grid.Row="3"
                       Text="个性键盘音效，尽在掌握" 
                       FontSize="16" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Opacity="0.8"
                       Margin="0,0,0,30"/>
            
            <!-- 进度条 -->
            <ProgressBar x:Name="LoadingProgressBar"
                         Grid.Row="4"
                         Height="4"
                         Width="200"
                         IsIndeterminate="True"
                         Foreground="White"
                         Background="Transparent"
                         BorderBrush="Transparent"
                         Style="{StaticResource MaterialDesignLinearProgressBar}"/>
        </Grid>
        
        <!-- 动画触发器 -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <!-- Logo缩放动画 -->
                        <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                                         Storyboard.TargetProperty="ScaleX"
                                         From="0.5" To="1.2" Duration="0:0:0.5"
                                         AutoReverse="True"
                                         RepeatBehavior="1x">
                            <DoubleAnimation.EasingFunction>
                                <ElasticEase Oscillations="1" Springiness="3"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        
                        <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                                         Storyboard.TargetProperty="ScaleY"
                                         From="0.5" To="1.2" Duration="0:0:0.5"
                                         AutoReverse="True"
                                         RepeatBehavior="1x">
                            <DoubleAnimation.EasingFunction>
                                <ElasticEase Oscillations="1" Springiness="3"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        
                        <!-- Logo最终稳定动画 -->
                        <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                                         Storyboard.TargetProperty="ScaleX"
                                         From="1.2" To="1" Duration="0:0:0.3"
                                         BeginTime="0:0:1"/>
                        
                        <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                                         Storyboard.TargetProperty="ScaleY"
                                         From="1.2" To="1" Duration="0:0:0.3"
                                         BeginTime="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>