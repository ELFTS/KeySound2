<UserControl x:Class="KeySound2.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="系统设置"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Text="开机自启"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Text="系统启动时自动运行 KeySound2"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                        </Grid>

                        <!-- 移除样式引用，使用默认分隔符 -->
                        <Separator Grid.Row="1"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Text="最小化到托盘"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Text="关闭窗口时最小化到系统托盘"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="True"/>
                        </Grid>

                        <!-- 移除样式引用，使用默认分隔符 -->
                        <Separator Grid.Row="1"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Text="检查更新"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Text="定期检查新版本"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="True"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="15">
                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Text="主题设置"/>
                            
                            <ComboBox Margin="0,10"
                                      materialDesign:HintAssist.Hint="选择主题"
                                      SelectedIndex="0">
                                <ComboBoxItem>浅色主题</ComboBoxItem>
                                <ComboBoxItem>深色主题</ComboBoxItem>
                            </ComboBox>
                            
                            <!-- 添加音量控制滑块，移除样式引用 -->
                            <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Text="音量设置"
                                       Margin="0,15,0,5"/>
                            
                            <Slider Margin="0,0,0,10"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="80"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>