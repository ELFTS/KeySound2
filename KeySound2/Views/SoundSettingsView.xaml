<UserControl x:Class="KeySound2.Views.SoundSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:components="clr-namespace:KeySound2.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="音效设置"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Text="启用音效"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Text="开启或关闭键盘音效"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="True"/>
                        </Grid>

                        <Separator Grid.Row="1"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="15">
                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Text="声音方案"/>
                            <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Text="选择或创建声音方案"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    Margin="15,0">
                            <ComboBox x:Name="ProfileComboBox"
                                      materialDesign:HintAssist.Hint="选择方案"
                                      MinWidth="150"
                                      Margin="0,0,10,0"
                                      SelectionChanged="ProfileComboBox_SelectionChanged"/>
                            
                            <Button x:Name="NewProfileButton"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="新建"
                                    Click="NewProfileButton_Click"
                                    Margin="0,0,10,0"/>
                            
                            <Button x:Name="DeleteProfileButton"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="删除"
                                    Click="DeleteProfileButton_Click"
                                    Margin="0,0,10,0"/>
                            
                            <Button x:Name="ExportProfileButton"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="导出"
                                    Click="ExportProfileButton_Click"
                                    Margin="0,0,10,0"/>
                            
                            <Button x:Name="ImportProfileButton"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="导入"
                                    Click="ImportProfileButton_Click"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 虚拟键盘和音效设置 -->
                        <StackPanel Grid.Row="0" Margin="15">
                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Text="按键音效设置"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock x:Name="SelectedKeyText"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Text="请选择一个按键进行设置"
                                       Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="SoundPathTextBox"
                                         Grid.Column="0"
                                         materialDesign:HintAssist.Hint="音效文件路径"
                                         IsReadOnly="True"
                                         Margin="0,0,10,0"/>
                                
                                <Button x:Name="PlaySoundButton"
                                        Grid.Column="1"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Content="播放"
                                        Click="PlaySoundButton_Click"/>
                            </Grid>
                        </StackPanel>

                        <!-- 虚拟键盘 -->
                        <components:VirtualKeyboard x:Name="VirtualKeyboardControl"
                                                    Grid.Row="1"
                                                    Margin="15,0,15,15"
                                                    KeySelected="VirtualKeyboardControl_KeySelected"/>
                    </Grid>
                </materialDesign:Card>
                
                <!-- 音频文件管理 -->
                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Margin="15">
                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Text="音频文件管理"/>
                            <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Text="管理系统中的音频文件"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal"
                                    Margin="15,0,15,15">
                            <Button x:Name="AddAudioFileButton"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="添加音频文件"
                                    Click="AddAudioFileButton_Click"
                                    Margin="0,0,10,0"/>
                            
                            <Button x:Name="RefreshAudioFilesButton"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="刷新"
                                    Click="RefreshAudioFilesButton_Click"/>
                        </StackPanel>
                        
                        <!-- 音频文件列表 -->
                        <StackPanel Grid.Row="2" Margin="15,0,15,15">
                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Text="可用音频文件"
                                       Margin="0,0,0,10"/>
                            
                            <ListBox x:Name="AudioFilesListBox"
                                     Height="150"
                                     SelectionMode="Single"
                                     MouseDoubleClick="AudioFilesListBox_MouseDoubleClick">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding}" 
                                                       TextTrimming="CharacterEllipsis"
                                                       VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="1"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Content="重命名"
                                                    Click="RenameAudioFileButton_Click"
                                                    Margin="5,0"
                                                    Padding="5,0"/>
                                            
                                            <Button Grid.Column="2"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Content="删除"
                                                    Click="DeleteAudioFileButton_Click"
                                                    Margin="5,0"
                                                    Padding="5,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>