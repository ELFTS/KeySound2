<UserControl x:Class="EKSE.Components.VirtualKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 功能说明 -->
            <TextBlock Grid.Row="0" 
                       Text="点击下方虚拟键盘按键，然后选择对应的音效文件" 
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       Margin="0,0,0,10"/>

            <!-- 虚拟键盘 -->
            <Grid Grid.Row="1" x:Name="KeyboardGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 第一行: ESC, F1-F12 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="ESC" Width="65" Height="40" Margin="2" Tag="Escape" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Border Width="5"/>
                    <Button Content="F1" Width="45" Height="40" Margin="2" Tag="F1" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F2" Width="45" Height="40" Margin="2" Tag="F2" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F3" Width="45" Height="40" Margin="2" Tag="F3" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F4" Width="45" Height="40" Margin="2" Tag="F4" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Border Width="5"/>
                    <Button Content="F5" Width="45" Height="40" Margin="2" Tag="F5" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F6" Width="45" Height="40" Margin="2" Tag="F6" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F7" Width="45" Height="40" Margin="2" Tag="F7" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F8" Width="45" Height="40" Margin="2" Tag="F8" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Border Width="5"/>
                    <Button Content="F9" Width="45" Height="40" Margin="2" Tag="F9" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F10" Width="45" Height="40" Margin="2" Tag="F10" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F11" Width="45" Height="40" Margin="2" Tag="F11" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F12" Width="45" Height="40" Margin="2" Tag="F12" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Border Width="5"/>
                    <Button Content="Print" Width="50" Height="40" Margin="2" Tag="PrintScreen" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="ScrLk" Width="50" Height="40" Margin="2" Tag="Scroll" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="Pause" Width="50" Height="40" Margin="2" Tag="Pause" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                </StackPanel>
                
                <!-- 第二行: 波浪号, 1-0, -, =, Backspace -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="~&#x0a;`" Width="45" Height="40" Margin="2" Tag="Oem3" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="!&#x0a;1" Width="45" Height="40" Margin="2" Tag="D1" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="&#64;&#x0a;2" Width="45" Height="40" Margin="2" Tag="D2" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="#&#x0a;3" Width="45" Height="40" Margin="2" Tag="D3" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="$&#x0a;4" Width="45" Height="40" Margin="2" Tag="D4" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="%&#x0a;5" Width="45" Height="40" Margin="2" Tag="D5" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="^&#x0a;6" Width="45" Height="40" Margin="2" Tag="D6" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="&amp;&#x0a;7" Width="45" Height="40" Margin="2" Tag="D7" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="*&#x0a;8" Width="45" Height="40" Margin="2" Tag="D8" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="(&#x0a;9" Width="45" Height="40" Margin="2" Tag="D9" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content=")&#x0a;0" Width="45" Height="40" Margin="2" Tag="D0" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="_&#x0a;-" Width="45" Height="40" Margin="2" Tag="OemMinus" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="+&#x0a;=" Width="45" Height="40" Margin="2" Tag="OemPlus" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="Backspace" Width="90" Height="40" Margin="2" Tag="Back" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Border Width="5"/>
                    <Button Content="Ins" Width="45" Height="40" Margin="2" Tag="Insert" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Home" Width="45" Height="40" Margin="2" Tag="Home" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="PgUp" Width="45" Height="40" Margin="2" Tag="PageUp" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                </StackPanel>
                
                <!-- 第三行: Tab, Q-P, [, ], \ -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Tab" Width="60" Height="40" Margin="2" Tag="Tab" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="Q" Width="40" Height="40" Margin="2" Tag="Q" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="W" Width="40" Height="40" Margin="2" Tag="W" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="E" Width="40" Height="40" Margin="2" Tag="E" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="R" Width="40" Height="40" Margin="2" Tag="R" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="T" Width="40" Height="40" Margin="2" Tag="T" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="Y" Width="40" Height="40" Margin="2" Tag="Y" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="U" Width="40" Height="40" Margin="2" Tag="U" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="I" Width="40" Height="40" Margin="2" Tag="I" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="O" Width="40" Height="40" Margin="2" Tag="O" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="P" Width="40" Height="40" Margin="2" Tag="P" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="( &#x0a;[" Width="40" Height="40" Margin="2" Tag="OemOpenBrackets" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content=") &#x0a;]" Width="40" Height="40" Margin="2" Tag="OemCloseBrackets" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="|\&#x0a;" Width="60" Height="40" Margin="2" Tag="Oem5" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Border Width="10"/>
                    <Button Content="Del" Width="40" Height="40" Margin="2" Tag="Delete" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="End" Width="40" Height="40" Margin="2" Tag="End" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="PgDn" Width="40" Height="40" Margin="2" Tag="PageDown" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
                </StackPanel>
                
                <!-- 第四行: Caps Lock, A-L, ;, ', Enter -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Caps Lock" Width="85" Height="40" Margin="2" Tag="CapsLock" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="A" Width="45" Height="40" Margin="2" Tag="A" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="S" Width="45" Height="40" Margin="2" Tag="S" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="D" Width="45" Height="40" Margin="2" Tag="D" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="F" Width="45" Height="40" Margin="2" Tag="F" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="G" Width="45" Height="40" Margin="2" Tag="G" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="H" Width="45" Height="40" Margin="2" Tag="H" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="J" Width="45" Height="40" Margin="2" Tag="J" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="K" Width="45" Height="40" Margin="2" Tag="K" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="L" Width="45" Height="40" Margin="2" Tag="L" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content=":&#x0a;;" Width="45" Height="40" Margin="2" Tag="OemSemicolon" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="&quot;&#x0a;'" Width="45" Height="40" Margin="2" Tag="OemQuotes" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="Enter" Width="95" Height="40" Margin="2" Tag="Enter" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                </StackPanel>
                
                <!-- 第五行: Shift, Z-M, ,, ., /, Shift -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Shift" Width="105" Height="40" Margin="2" Tag="LeftShift" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Z" Width="45" Height="40" Margin="2" Tag="Z" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="X" Width="45" Height="40" Margin="2" Tag="X" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="C" Width="45" Height="40" Margin="2" Tag="C" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="V" Width="45" Height="40" Margin="2" Tag="V" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="B" Width="45" Height="40" Margin="2" Tag="B" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="N" Width="45" Height="40" Margin="2" Tag="N" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="M" Width="45" Height="40" Margin="2" Tag="M" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="&lt;&#x0a;," Width="45" Height="40" Margin="2" Tag="OemComma" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="&gt;&#x0a;." Width="45" Height="40" Margin="2" Tag="OemPeriod" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="?&#x0a;/" Width="45" Height="40" Margin="2" Tag="OemQuestion" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="Shift" Width="115" Height="40" Margin="2" Tag="RightShift" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                </StackPanel>
                
                <!-- 第六行: Ctrl, Win, Alt, Space, Alt, Win, Menu, Ctrl -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Ctrl" Width="65" Height="40" Margin="2" Tag="LeftCtrl" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Win" Width="65" Height="40" Margin="2" Tag="LWin" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Alt" Width="65" Height="40" Margin="2" Tag="LeftAlt" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Space" Width="300" Height="40" Margin="2" Tag="Space" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Alt" Width="65" Height="40" Margin="2" Tag="RightAlt" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Win" Width="65" Height="40" Margin="2" Tag="RWin" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                    <Button Content="Menu" Width="65" Height="40" Margin="2" Tag="Apps" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="10"/>
                    <Button Content="Ctrl" Width="65" Height="40" Margin="2" Tag="RightCtrl" Click="KeyButton_Click" Style="{StaticResource MaterialDesignFlatButton}" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>