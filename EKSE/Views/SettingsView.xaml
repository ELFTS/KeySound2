<UserControl x:Class="EKSE.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="系统设置"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Text="开机自启"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Text="系统启动时自动运行 EKSE"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                        </Grid>

                        <Separator Grid.Row="1"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Text="最小化到托盘"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Text="关闭窗口时最小化到系统托盘"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="True"/>
                        </Grid>

                        <Separator Grid.Row="1"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="15">
                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Text="主题设置"/>
                            
                            <ComboBox Margin="0,10"
                                      materialDesign:HintAssist.Hint="选择主题"
                                      SelectedIndex="0">
                                <ComboBoxItem>浅色主题</ComboBoxItem>
                                <ComboBoxItem>深色主题</ComboBoxItem>
                            </ComboBox>
                            
                            <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Text="主题颜色"
                                       Margin="0,15,0,5"/>
                            
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Disabled"
                                          Margin="0,10">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton x:Name="PurpleColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 IsChecked="True"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="Purple"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="BlueColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="Blue"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="GreenColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="Green"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="OrangeColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="Orange"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="RedColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="Red"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="PinkColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="DeepPink"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="IndigoColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="Indigo"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="TealColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Margin="0,0,10,0"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="Teal"/>
                                    </RadioButton>
                                    
                                    <RadioButton x:Name="LimeColorOption"
                                                 GroupName="Colors" 
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Checked="ColorOption_Checked">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Foreground="LimeGreen"/>
                                    </RadioButton>
                                </StackPanel>
                            </ScrollViewer>
                            
                            <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Text="音量设置"
                                       Margin="0,15,0,5"/>
                            
                            <Slider Margin="0,0,0,10"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="80"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="15">
                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Text="配置管理"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button x:Name="ExportConfigButton"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Export" Margin="0,0,5,0"/>
                                        <TextBlock Text="导出配置"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button x:Name="ImportConfigButton"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Import" Margin="0,0,5,0"/>
                                        <TextBlock Text="导入配置"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button x:Name="ResetSettingsButton"
                                        Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Restore" Margin="0,0,5,0"/>
                                        <TextBlock Text="重置设置"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>